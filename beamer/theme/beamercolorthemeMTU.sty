\ProvidesPackage{beamerfontthemeMTU}

\mode<presentation>


% Define color theme settings...
\setbeamercolor*{item}{fg=myblue}
\setbeamercolor*{structure}{bg=myblue!20,fg=myblue}
\setbeamercolor*{titlelike}{parent=palette primary}
% \setbeamercolor{frametitle}{bg=myblue!85,fg=white}

% Define theme colors
\definecolor{mybg}{RGB}{255,255,255} % Background color
\definecolor{myfg}{RGB}{0,0,0}       % Foreground (text) color

\definecolor{myblue}{RGB}{33,84,157}
\definecolor{lightgray}{RGB}{200,200,200}
\definecolor{gray}{RGB}{150,150,150}

% Set background and foreground colors
\setbeamercolor{background canvas}{bg=mybg}
\setbeamercolor{normal text}{fg=myfg}

\setbeamercolor*{title page header}{fg=myblue}
\setbeamercolor*{author}{fg=black}
\setbeamercolor*{date}{fg=black}
